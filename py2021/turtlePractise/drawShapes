import turtle as t
import random

tim = t.Turtle()

colors = [
"CornflowerBlue",
"DarkOrchid",
"IndianRed", 
"DeepSkyBlue",
"LightSeaGreen",
"wheat",
"SlateGray",
"SeaGreen"
]

def draw_shape(numb_sides):
  angle = 360 / numb_sides)
  for i in range(numb_sides):
    tim.forward(100)
    tim.right(angle)
    
for shape_sides_n in range(3, 10):
  tim.color(random.choice(colors))
  draw_shape(shape_side_n)

